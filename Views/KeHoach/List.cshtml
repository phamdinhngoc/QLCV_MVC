﻿@using System.Data;
@model QLCV_MVC.ViewModels.qlcv_kehoachviewmodel
@{
    //Layout = "/Views/Shared/_Layout.cshtml";
    //DataTable listqlcv_cvkehoach = ViewBag.listqlcv_cvkehoach as DataTable;
    ViewData["title"] = "KẾ HOẠCH";
}


<table id="table" class="table table-striped table-bordered" cellspacing="0">
    <thead style="color:green">
        <tr>
            <th style="text-align:center">id</th>
            <th style="text-align:center">Nội dung</th>
            <th style="text-align:center">Mô tả</th>
            <th style="text-align:center">Ngày bắt đầu</th>
            <th style="text-align:center">Ngày kết thúc</th>
            <th style="text-align:center">Bộ phận</th>
            @*<th></th>*@
        </tr>
    </thead>
    <tbody style="color:black">
        @foreach (var item in Model.listqlcv_kehoachVM)
        {
            <tr>
                <td>@item.id </td>
                <td>@item.noidung</td>
                <td> @item.mota</td>
                <td>@item.ngaybd</td>
                <td>@item.ngaykt</td>
                <td> @item.bophan</td>
                <td></td>

                <td style="text-align:center">
                    <a class="fa fa-edit" asp-action="Edit" asp-controller="qlcv_kehoach" asp-route-id="@item.id"> Sửa</a>
                   
                </td>
                <td style="text-align:center">
                    <a class="fa fa-trash" asp-action="Delete" asp-controller="qlcv_kehoach" asp-route-id="@item.id">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>
