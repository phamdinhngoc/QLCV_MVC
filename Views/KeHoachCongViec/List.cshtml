    ViewData["title"] = "KẾ HOẠCH CÔNG VIỆC";
}

<table id="table" class="table table-striped table-bordered" cellspacing="0">
    <thead style="color:green">
        <tr>
            <th style="text-align:center">id</th>
            <th style="text-align:center">Kế hoạch</th>
            <th style="text-align:center">Nội dung</th>
            <th style="text-align:center">Mô tả</th>
            <th style="text-align:center">Ngày bắt đầu</th>
            <th style="text-align:center">Ngày kết thúc</th>
            <th style="text-align:center">Điểm</th>
            <th style="text-align:center">Nhân viên</th>
            <th style="text-align:center">Bộ phận</th>
            @*<th></th>*@
        </tr>
    </thead>
    <tbody style="color:black">
        @foreach (var item in Model.listqlcv_cvkehoachVM)
        {
            <tr>
                <td>
                    @item.id
                </td>
                <td>
                    @item.kehoach
                </td>
                <td>
                    @item.noidung
                </td>
                <td>
                    @item.mota
                </td>
                <td>
                    @item.ngaybd
                </td>
                <td>
                    @item.ngaykt
                </td>
                <td>
                    @item.diem
                </td>
                <td>
                    @item.bophan
                </td>
                <td>
                    @item.hotennv
                </td>
                <td></td>

                <td style="text-align:center">
                    @*<a class="fa fa-edit" asp-action="Edit" asp-asp-controller="qlcv_cvkehoach" asp-route-id="@item.id"  onclick="Edit('@item.id')"> Sửa</a>*@
                    <a class="fa fa-edit" asp-action="Edit" asp-controller="qlcv_cvkehoach" asp-route-id="@item.id"> Sửa</a>
                </td>
                <td style="text-align:center">
                    <a class="fa fa-trash" asp-action="Delete" asp-controller="qlcv_cvkehoach" asp-route-id="@item.id">Delete</a>
                </td>
            </tr>
        }
       
    </tbody>
</table>
